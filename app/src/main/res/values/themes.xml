<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ProximityConnect" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">#323232</item>
        <item name="colorPrimaryVariant">#161616</item>
        <item name="colorOnPrimary">#FFFFFFFF</item>
        <item name="colorSecondary">#8692f7</item>
        <item name="colorSecondaryVariant">#FFEEAA</item>
        <item name="colorOnSecondary">#FFFFFFFF</item>
        <item name="android:statusBarColor" >?attr/colorSecondaryVariant</item>


    </style>

    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/night_mode</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#FFFFFFFF</item>
    </style>

    <style name="Theme.ProximityConnect" parent="Base.Theme.ProximityConnect" />

    <style name="notificationsSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/notifications</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <style name="privateAccountSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/private_account</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>
</resources>